<h3> Make Your Schedule </h3>

<%= form_for @schedule do |f| %>

  <%= render 'shared/errormessages', :object => f.object %>

  <%= f.label "Schedule for:" %>
  <%= f.date_select :date, :start_year => Time.now.year %> <br />

  <%= f.label "Template you want to use:" %>
  <%= f.collection_select :day_id, @day_templates, :id, :name %> <br />
  <br />
  <% @shifts.each do |shift| %>
    <%= shift.name %> 
    <%= select("post","employee_id", Employee.elgible_for_shift(shift.role_ids), :selected => Employee.elgible_for_shift(shift.roles_per_shift).sample ) %>
    <br />
  <% end %>

  <%= f.submit "Create" %>

<% end %>

