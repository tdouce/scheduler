<table>
  <tr>
    <th>
      Role
    </th>
    <th>
      Description 
    </th>
    <th></th>
  <tr>
  <% @roles.each do |role| %>
  <tr>
    <td>
      <%= link_to role.name, edit_role_url(role)  %>
    </td>
    <td>
      Description of role here
    </td>
    <td>
      <%= link_to "delete", role, :method => :delete,
        :confirm => "Are you sure you want to delete #{ role.name }" %>
    </td>
  <tr>
  <% end %>

</table>
