<table>
  <tr>
    <th>
      <%= @roles.name %>
    </th>
    <th></th>
    <th></th>
  <tr>
  <% @roles.each do |role| %>
  <tr>
    <td>
      <%= link_to role.name, role  %>
    </td>
    <td>
      <%= link_to "delete", role, :method => :delete,
        :confirm => "Are you sure you want to delete #{ role.name }" %>
    </td>
    <td>
      <%= link_to "edit", edit_role_url(role)  %>
    </td>
  <tr>
  <% end %>

</table>

